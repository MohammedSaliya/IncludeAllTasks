<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#CBEDDB"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageview"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/love" />

            <TextView
                android:id="@+id/pt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imageview"
                android:gravity="center"
                android:text="productName"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pt_name"
                android:layout_marginLeft="70dp"
                android:layout_toRightOf="@id/imageview"
                android:gravity="center"
                android:text="Quantity:"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/pt_qaty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pt_name"
                android:layout_marginLeft="140dp"
                android:layout_toRightOf="@id/imageview"
                android:gravity="center"
                android:text="quantity"
                android:textColor="#000"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/pt_uom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pt_name"
                android:layout_marginLeft="165dp"
                android:layout_toRightOf="@id/imageview"
                android:gravity="center"
                android:text="productUom"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/quantity"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imageview"
                android:gravity="center"
                android:text="Price:"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pt_uom"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imageview"
                android:text="Rs"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/pt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pt_uom"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imageview"
                android:text=" Price"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/payment_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pt_price"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/imageview"
                android:text="Payment Mode:"
                android:textColor="#000"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/pt_payment_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pt_price"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/imageview"
                android:text="COD"
                android:textColor="#000"
                android:textSize="16dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>